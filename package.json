{
  "name": "patrickblonien-website",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "description": "Personal academic website for Patrick Blonien",
  "packageManager": "npm@11.6.2",
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "pnpm": "please-use-npm",
    "yarn": "please-use-npm"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "prebuild": "bun run generate",
    "build": "next build --turbo",
    "prod": "next build && serve out",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "validate": "concurrently -g -c auto npm:lint npm:typecheck",
    "generate": "concurrently -g -c auto npm:generate:llms npm:generate:llms-full",
    "generate:llms": "bun run scripts/generate-llms-txt.ts",
    "generate:llms-full": "bun run scripts/generate-llms-txt.ts --full"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "lucide-react": "^0.545.0",
    "next": "^15.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@next/bundle-analyzer": "^15.5.5",
    "@next/eslint-plugin-next": "^15.5.2",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "bun": "^1.3.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.41.0"
  },
  "browserslist": {
    "production": [
      "defaults and supports es6-module",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
