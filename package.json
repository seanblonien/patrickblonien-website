{
  "name": "patrickblonien-website",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "description": "Personal academic website for Patrick Blonien",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "engines": {
    "node": ">=24",
    "pnpm": ">=10",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "bun run gen",
    "build": "next build",
    "prod": "next build && serve out",
    "analyze": "next experimental-analyze",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix .",
    "validate": "concurrently -g -c auto pnpm:lint pnpm:typecheck",
    "gen": "concurrently -g -c auto pnpm:gen:llms pnpm:gen:llms-full",
    "gen:llms": "bun run scripts/generate-llms-txt.ts",
    "gen:llms-full": "bun run scripts/generate-llms-txt.ts --full"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "lucide-react": "^0.562.0",
    "next": "^16.1.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^16.1.4",
    "@seanblonien/eslint-config-react": "^1.0.19",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "bun": "^1.3.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "eslint-plugin-react-hooks": "7.0.0"
  },
  "browserslist": [
    "Chrome >= 109",
    "Firefox >= 109",
    "Safari >= 16.4",
    "Edge >= 109"
  ]
}
