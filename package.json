{
  "name": "patrickblonien-website",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "description": "Personal academic website for Patrick Blonien",
  "packageManager": "npm@11.7.0+sha512.c22099a6fff8d5b2286c2a09df5352b4858a7c0c716320f58989d60ad8b29ecf2ce6fdfe97ccb41c23ffb1272e1fa079f868487dd6b81d02a2a9e199c095a117",
  "engines": {
    "node": ">=24",
    "npm": ">=10",
    "pnpm": "please-use-npm",
    "yarn": "please-use-npm"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "bun run gen",
    "build": "next build",
    "prod": "next build && serve out",
    "analyze": "next experimental-analyze",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix .",
    "validate": "concurrently -g -c auto npm:lint npm:typecheck",
    "gen": "concurrently -g -c auto npm:gen:llms npm:gen:llms-full",
    "gen:llms": "bun run scripts/generate-llms-txt.ts",
    "gen:llms-full": "bun run scripts/generate-llms-txt.ts --full"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "lucide-react": "^0.545.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "16.0.0",
    "@seanblonien/eslint-config-react": "^1.0.7",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.7.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "bun": "^1.3.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "eslint-plugin-react-hooks": "7.0.0"
  },
  "browserslist": [
    "Chrome >= 109",
    "Firefox >= 109",
    "Safari >= 16.4",
    "Edge >= 109"
  ]
}
